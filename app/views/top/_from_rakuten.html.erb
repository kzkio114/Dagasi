<%= form_with url: root_path, method: :get, local: true do |form| %>
  <div class="mb-4">
  <%= form.label :keyword, "キーワードで検索", class: "block text-sm font-medium text-white" %>
    <div class="mt-1">
      <%= form.text_field :keyword, class: "input input-bordered w-full", placeholder: "キーワードを入力" %>
    </div>
  </div>
  <div class="flex items-center space-x-4">
    <%= form.submit "検索", class: "btn btn-primary" %>
    <%= link_to 'ランダム表示', items_random_search_path, class: 'btn' %> <!-- ランダム検索ボタン -->
  </div>
<% end %>

