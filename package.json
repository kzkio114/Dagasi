{
  "name": "app",
  "private": true,
  "scripts": {
    "build": "bun run esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css": "bun run sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "bulma": "^1.0.0",
    "esbuild": "^0.20.2",
    "sass": "^1.75.0"
  }
}